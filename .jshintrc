{
    "maxerr"        : 50, // maximum amount of warnings JSHint will produce before giving up
    "bitwise"       : false,  // This option prohibits the use of bitwise operators
    "camelcase"     : true,  // camelCase notation
    "curly"         : true, // err: use curly braquets
    "eqeqeq"        : true, // === instead ==
    "es3"           : false, // ...for legacy IE compatibility
    "forin"         : true, // err: check obj.hasOwnProperty(key)
    "freeze"        : true, // err: don't modify native prototypes
    "indent"        : 4, // err: expected indent of 4, found 2
    "latedef"       : "nofunc", // prohibits the use of a variable before it was defined.
    "noarg"         : true, // prohibits the use of arguments.caller and arguments.callee
    "noempty"       : true, // warns when you have an empty block in your code.
    "nonbsp"        : true, // warns about non-breaking whitespace characters
    "nonew"         : true, // prohibits the use of constructor functions for side-effects
    "plusplus"      : false, // prohibits the use of unary increment and decrement operators
    "undef"         : true,  // prohibits the use of explicitly undeclared variables
    "maxparams"     : 15, // max number of parameters
    "maxdepth"      : 5,  // control how nested do you want your blocks to be
    "maxstatements" : 40,  // set the max number of statements allowed per function
    "maxcomplexity" : 10, // measures the number of linearly independent paths through a program's source code.
    "asi"           : false, // missing ;
    "boss"          : true, // warning about loop without the () on the iteration declaration
    "debug"         : false, // debugger statement forgotten
    "eqnull"        : true, // suppresses warnings about == null comparisons
    "esnext"        : false, // ES6 syntax
    "evil"          : false,  // eval is evil
    "expr"          : false, // suppresses warnings about the use of expressions
    "funcscope"     : false, // suppresses warnings about declaring variables inside of control structures while accessing them later from the outside
    "globalstrict"  : false, // functions to run in ECMAScript 5's strict mode
    "iterator"      : false, // suppresses warnings about the legacy __iterator__ property
    "lastsemic"     : true,  // suppresses warnings about missing semicolons, but only when the semicolon is omitted for the last statement in a one-line block
    "loopfunc"      : true, // suppresses warnings about functions inside of loops
    "moz"           : true, // code uses Mozilla JavaScript extensions
    "notypeof"      : false, // suppresses warnings about invalid typeof operator values
    "proto"         : false, // suppresses warnings about the __proto__ property
    "scripturl"     : false, // suppresses warnings about the use of script-targeted URLs
    "shadow"        : false, // suppresses warnings about variable shadowing
    "supernew"      : false, // suppresses warnings about "weird" constructions 
    "validthis"     : false, // suppresses warnings about possible strict violations when the code is running in strict mode and you use this in a non-constructor function
    "noyield"       : false, // suppresses warnings about generator functions with no yield statement in them
    "browser"       : true, // defines globals exposed by modern browsers
    "node"          : true, // defines globals exposed by NodeJS
    "devel"         : true,  // console, alert, etc. 
    "esnext"        : true, // ES6 allow
    "unused"        : true, // unused parameters, variables, etc
    "strict"        : false, // err: need use strict
    "couch"         : true, // defines globals exposed by CouchDB
    "jasmine"       : true, // defines globals exposed by Jasmine JS
    "phantom"       : true, // defines globals exposed by phantomJS
    "es5"           : true, // Allow ECMAScript 5 syntax.
    
    "globals": {
      "angular"   : false,
      "$"         : false,
      "jsSHA"     : false,
      "console"   : false,
      "jasmine"   : false,
      "jquery"    : false,
      "Api"       : false,
      "console"   : false,
      "expect"    : false,
      "describe"  : false,
      "xdescribe" : false,
      "runs"      : false,
      "waitsFor"  : false,
      "it"        : false,
      "xit"       : false,
      "beforeEach": false,
      "inject"    : false,
      "spyOn"     : false,
      "_"         : false,
      "moment"    : false,
      "URI"       : false
    }
    
}
